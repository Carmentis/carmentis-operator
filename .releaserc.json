{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "type": "dev",
            "release": "patch"
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "npm run test && docker --version",
        "prepareCmd": "npm run version:bump ${nextRelease.version} && npm run docker build ${nextRelease.version}",
        "publishCmd": "npm run docker publish ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "workspace/package.json",
          "operator/package.json",
          "CHANGELOG.md"
        ]
      }
    ]
  ]
}
